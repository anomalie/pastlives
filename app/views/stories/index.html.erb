<div class="container-fluid">
	<div class = "row">
		<h3>my stories</h3>
		<div class="col-md-4"></div>	
	
	<div class="col-md-4">
	<% if current_user %>
	  <% @stories.each do |story| %>
	  <ul class="list-group">
			<li class="list-group-item"><%= story.category%></li>
	    <li class="list-group-item"><%= story.text%></li>
	  
		<button type="button" class="btn btn-default btn-xs">
	 		<%= link_to "Show this story", story_path(story)%>
	 	</button>
		 <button type="button" class="btn btn-default btn-xs">
			 <%= link_to "Edit this story", edit_story_path(story) %> 	
		 </button>  
		
	  <% end %>
	 <% end %>

	 </ul>
</div>

	<div class="col-md-4"></div>
</div>
</div>

	

