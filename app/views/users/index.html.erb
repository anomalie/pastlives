
<!-- Stories Container -->
<div class="container">
	<div class="row">		
		<div class="col-md-3"></div>	
		<div class="col-md-3">
			 	
			<div class= "scrollbox">
			<strong>stories:</strong>
				<ul class="list-group">

				
					<% @stories.each do |story| %> 
			  	<li class="list-group-item"><%= story.text%> </li>  
				<% end %>
				</ul>
			</div>
		</div>
		
<!-- Quotes Container -->
		<div class="col-md-3">
		
			<div class= "scrollbox">
			<strong>quotes:</strong>
				<ul class="list-group">
				
				<% @quotes.each do |quote| %>
		
	  		<li class="list-group-item"><%= quote.text%></li>
			   
				<% end %>


				</ul>
			</div>
		</div>


		<div class="col-md-3"></div>
	</div>
</div>

